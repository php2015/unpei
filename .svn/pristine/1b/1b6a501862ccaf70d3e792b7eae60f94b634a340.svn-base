/**表格**/

table{height:100%;width:100%}
table td,table th{ padding:2px 5px;height:22px; line-height:24px;}
table tr{height:30px; line-height:30px; border-bottom: 1px solid #c5d2e2}
.grid-view table thead tr{ 
    background:#EAB265;
    background: -moz-linear-gradient(top, #F1DAAE, #EAB265);
    background: -webkit-linear-gradient(top, #F1DAAE, #EAB265);  /* Safari Chrome */
    background: -ms-linear-gradient(top, #F1DAAE, #EAB265);   /* IE */
    background: -o-linear-gradient(top, #F1DAAE, #EAB265);    /* Opera*/
}
.grid-view table thead tr th{ color:#fff; border-right:1px solid #fac9a1; text-align:center}
table tbody td{ text-align:center}
td a{ color:#444}
/*.tr1{background:}*/
.td1{ color:#ed7717}
.con_rows_table table tbody tr:hover {
    background: none repeat scroll 0 0 #FCC38E;
}
table .even{
    background: none repeat scroll 0 0 #e8f0fb;
}

/*grid-view新样式*/
.grid-view table{ border:0}

.grid-view table tr td{ border-bottom:#FECA9A 1px solid}
.grid-view table tbody tr:hover{ background:#FCC38E}
.grid-view table .even{ background:#FEF4EA}
.grid-view table thead tr th{color:#764928}
.grid-view table tbody td{ padding:0px 5px}
